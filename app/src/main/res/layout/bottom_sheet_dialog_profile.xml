<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/backgroundCV">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Ubah Data"
        android:textAlignment="center"
        android:textSize="17sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/etEmail"
        android:drawableStart="@drawable/ic_outline_email_24"
        android:drawablePadding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:autofillHints="Email"
        android:ems="10"
        android:enabled="false"
        android:inputType="none"
        android:textSize="14sp"/>

    <EditText
        android:id="@+id/etId"
        android:drawableStart="@drawable/outline_credit_card_24"
        android:drawablePadding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="NPM"
        android:inputType="text"
        android:textSize="14sp"/>

    <EditText
        android:id="@+id/etName"
        android:drawableStart="@drawable/outline_person_outline_24"
        android:drawablePadding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"
        android:autofillHints="@string/firstName"
        android:ems="10"
        android:hint="@string/firstName"
        android:inputType="text"
        android:textSize="14sp"/>

    <EditText
        android:id="@+id/etInfo"
        android:drawableStart="@drawable/ic_outline_info_24"
        android:drawablePadding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="Info"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="@string/info"
        android:inputType="text"
        android:textSize="14sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_subject"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scrollbars="vertical"
        android:layout_marginHorizontal="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintEnd_toEndOf="@+id/text_input_layout3"
        app:layout_constraintStart_toStartOf="@+id/text_input_layout3"
        app:layout_constraintTop_toBottomOf="@id/textView4"
        tools:listitem="@layout/items_checkbox" />

    <Button
        android:id="@+id/btnSaveEdit"
        style="@style/ButtonGeneral3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="@string/save_edit"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>




</androidx.appcompat.widget.LinearLayoutCompat>