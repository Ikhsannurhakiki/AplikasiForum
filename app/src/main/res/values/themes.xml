<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AplikasiForum" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryVariant">@color/blue1</item>
        <item name="colorOnPrimary">@color/blue2</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_200</item>
        <item name="colorSecondaryVariant">@color/blue3</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/green_500</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonGeneral">
        <item name="android:backgroundTint">@color/green_500</item>
        <item name="android:animateOnClick">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonEmailVerification">
        <item name="android:backgroundTint">@color/grey</item>
        <item name="android:animateOnClick">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonGeneralProfile">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:animateOnClick">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonGeneral2">
        <item name="android:backgroundTint">@color/grey</item>
        <item name="android:animateOnClick">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonGeneral3">
        <item name="android:backgroundTint">@color/green_200</item>
        <item name="android:animateOnClick">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="backgroundCV">
        <item name="cardBackgroundColor">@color/lightGrey</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="background">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="background2">
        <item name="cardBackgroundColor">@color/white</item>
