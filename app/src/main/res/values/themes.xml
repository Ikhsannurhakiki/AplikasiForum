        <item name="passwordToggleTint">@color/blue3</item>
    </style>

    <style name="tv1">
        <item name="android:textColor">@color/blue3</item>
    </style>

    <style name="Theme.AplikasiForum.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AplikasiForum.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AplikasiForum.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
